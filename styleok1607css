  font-size: 1rem;
  font-family: 'Lato', sans-serif;
  color: #333;
  
  /* Hacemos que ocupe todo el ancho disponible */
  width: 100%;
  
  /* Transición suave para el efecto de foco */
  transition: border-color 0.2s ease, box-shadow 0.2s ease;
}

