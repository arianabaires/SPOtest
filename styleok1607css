    position: relative;
    transition: color 0.3s ease;
    text-transform: lowercase; /* Links del menú en minúscula */
}

.header-global nav ul li a:hover {
    color: var(--color-accent-terracotta);
}

.header-global nav ul li a::after { /* Underline effect on hover */
