        display: none;
    }
    .section-block {
        padding: 30px;
    }
    .blog-post h2 {
        font-size: 2em;
    }
    /* Deshabilitar custom cursor en touch devices (o pantallas pequeñas) */
    body {
        cursor: default;
    }
    #custom-cursor {
        display: none;
    }
    .mobile-nav.is-active {
        width: 100%;
    }
}

